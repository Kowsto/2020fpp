<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_product_manual_inherit">
            <field name="name">product_product_manual_inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="manual_pdf"/>
                    <field name="manual_pdf_name"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_manual_inherit">
            <field name="name">product_template_manual_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="manual_pdf"/>
                    <field name="manual_pdf_name"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_category_image_inherit">
            <field name="name">product_category_image_inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='first']" position="after">
                    <group>
                        <group name="log"/>

                        <group name="image">
                            <group>
                                <field name="image_medium" widget="image" nolabel="1"/>
                            </group>
                        </group>
                    </group>

                </xpath>

                <xpath expr="//group[@name='log']" position="inside">
                    <xpath expr="//field[@name='route_ids']/.." position="move"/>
                </xpath>
            </field>
        </record>



    </data>
</odoo>
